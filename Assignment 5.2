Maximum = None
Minimum = None
while True:
    num = input("Enter your number")
    if num == ("done"):
        break
    try:
        num = int(num)
    except:
        print ("Invalid input")
        continue
    if Maximum is None:
        Maximum = num
    elif num > Maximum:
        Maximum = num
    if Minimum is None:
        Minimum = num
    if num < Minimum:
        Minimum = num
print ("Invalid input")
print ("Maximum is",Maximum)
print ("Minimum is",Minimum)
